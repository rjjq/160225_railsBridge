<div class="col-md-4 col-md-offset-4">
  <p id="notice"><%= notice %></p>

  <h1>Listing Topics</h1>
  <hr>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @topics.sort_by {|t| -1 * t.votes_count}.each do |topic| %>
        <tr>
          <td><%= link_to topic.title, topic_path(topic) %></td>
          <td><%= pluralize(topic.votes_count, "vote") %></td>
          <td><%= button_to '+1', upvote_topic_path(topic), method: :post %></td>
          <td><%= button_to '-1', downvote_topic_path(topic), method: :post %></td>
          <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Topic', new_topic_path %>
  <br>
  <%= link_to 'About', topics_about_path %>
</div>
